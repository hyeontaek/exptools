#!/usr/bin/env python

import asyncio
import concurrent
import sys

from exptools.run_server import run_server

loop = asyncio.get_event_loop()
ready_event = None
argv = sys.argv[1:]

task = asyncio.ensure_future(run_server(argv, ready_event, loop=loop), loop=loop)

ret = 1
try:
  ret = loop.run_until_complete(task)
finally:
  if not task.done():
    task.cancel()
    try:
      ret = loop.run_until_complete(task)
    except concurrent.futures.CancelledError:
      pass

sys.exit(ret)
